@model WuzlStats.ViewModels.Players.IndexViewModel

<table class="table table-striped">
    <tr>
        <th>Player</th>
        <th>Last played</th>
        <th>Times played</th>
    </tr>

    @foreach (var p in Model.Players)
    {
        <tr>
            <td>@Html.ActionLink(p.Name, "Index", "Player", new { playerName = p.Name }, null)</td>
            <td>
                @p.LastPlayedDate.ToShortDateString()
            </td>
            <td>
                @p.NumberOfGames
            </td>
        </tr>
    }
</table>