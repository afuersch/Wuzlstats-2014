@model WuzlStats.ViewModels.Player.IndexViewModel.PlayerStats

<p>
    <div class="row">
        <div class="col-sm-4"><label>Games played:</label></div>
        <div class="col-sm-8"><span class="glyphicon glyphicon-thumbs-up"></span> @Model.WinsCount &nbsp;&nbsp; <span class="glyphicon glyphicon-thumbs-down"></span> @Model.LossesCount</div>
    </div>
</p>

<p>
    <div class="row">
        <div class="col-sm-4"><label>Favorite partner:</label></div>
        <div class="col-sm-8">@Model.FavoritePartner</div>
    </div>
</p>

<p>
    <div class="row">
        <div class="col-sm-4"><label>Favorite team:</label></div>
        <div class="col-sm-8">@Model.FavoriteTeam</div>
    </div>
</p>

<p>
    <div class="row">
        <div class="col-sm-4"><label>Favorite position:</label></div>
        <div class="col-sm-8">@Model.FavoritePosition</div>
    </div>
</p>
