@model WuzlStats.ViewModels.Player.IndexViewModel


<h1>Player <b>@Model.Name</b></h1>

<p>
    <label>Last played:</label>
    @Model.LastPlayedDate.ToShortDateString()
</p>


<div class="row">
    <div class="col-sm-6">
        <div class="well">
            <h3>Current stats (last 30 days)</h3>
            @Html.Partial("TeamPlayerStats", Model.CurrentStats)
            @Html.Partial("SinglePlayerStats", Model.CurrentSingleStats)
        </div>

    </div>

    <div class="col-sm-6">
        <div class="well">
            <h3>All time stats</h3>
            @Html.Partial("TeamPlayerStats", Model.AllTimeStats)
            @Html.Partial("SinglePlayerStats", Model.AllTimeSingleStats)
        </div>

    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Blue</th>
                    <th>Score</th>
                    <th>Red</th>
                </tr>
            </thead>

            @foreach (var s in Model.Scores)
            {
                <tr class="@(s.DateTime >= Model.MinDate ? "currentStats" : "")">
                    <td>@s.DateTime</td>
                    <td>@if (s.BlueScore > s.RedScore)
                        {
                            <span class="glyphicon glyphicon-thumbs-up"></span>
                        }
                        @s.TeamBlue
                    </td>
                    <td><b>@s.BlueScore : @s.RedScore</b></td>
                    <td>@if (s.BlueScore < s.RedScore)
                        {
                            <span class="glyphicon glyphicon-thumbs-up"></span>
                        }
                        @s.TeamRed
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
