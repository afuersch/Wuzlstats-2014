@model WuzlStats.ViewModels.Player.SinglePlayerStats

<div class="panel panel-default">
    <div class="panel-heading">Single</div>
    <div class="panel-body">

        <div class="row">
            <div class="col-sm-5">
                <label>Games played:</label>
            </div>
            <div class="col-sm-7"><span class="glyphicon glyphicon-thumbs-up"></span>&nbsp;@Model.WinsCount &nbsp;&nbsp; <span class="glyphicon glyphicon-thumbs-down"></span>&nbsp;@Model.LossesCount</div>
        </div>

        <div class="row">
            <div class="col-sm-5">
                <label>Favorite team:</label>
            </div>
            <div class="col-sm-7">
                @if (Model.FavoriteTeam == "None")
                {
                    <text>No favorite team</text>
                } 
                else
                {
                    var labelClass = Model.FavoriteTeam == "Red" ? "redTeam" : "blueTeam";
                    <span class="label @(labelClass)">@Model.FavoriteTeam</span>
                }
            </div>
        </div>

    </div>
</div>
