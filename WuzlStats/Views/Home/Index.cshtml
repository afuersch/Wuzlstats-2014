@model WuzlStats.ViewModels.Home.IndexViewModel

<div class="row">
    <div class="col-sm-6">
        @using (Html.BeginForm())
        {
            <div class="row">
                <div class="col-xs-4">
                    <label>Team Blue</label>
                    @Html.TextBoxFor(x => x.TeamBlueOffensePlayer, new { placeholder = "Offense Player", required = "required", @class = "form-control", list = "players" })<br />
                    @Html.TextBoxFor(x => x.TeamBlueDefensePlayer, new { placeholder = "Defense Player", required = "required", @class = "form-control", list = "players" })
                </div>
                <div class="col-xs-4" style="font-size: 2em; margin-top:40px;">
                    <div class="row">
                        <div class="col-xs-5">
                            @Html.TextBoxFor(x => x.TeamBlueScore, new { required = "required", style = "width:60px; font-size: 1em; height: 2em; text-align:center;", @class = "form-control" })
                        </div>
                        <div class="col-xs-2" style="text-align: center; margin-top: 5px;">
                            :
                        </div>
                        <div class="col-xs-5">
                            @Html.TextBoxFor(x => x.TeamRedScore, new { required = "required", style = "width:60px; font-size: 1em; height:2em; text-align:center;", @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="col-xs-4">
                    <label>Team Red</label>
                    @Html.TextBoxFor(x => x.TeamRedOffensePlayer, new { placeholder = "Offense Player", required = "required", @class = "form-control", list = "players" })<br />
                    @Html.TextBoxFor(x => x.TeamRedDefensePlayer, new { placeholder = "Defense Player", required = "required", @class = "form-control", list = "players" })
                </div>
            </div>
            <p style="margin-top: 20px; text-align: center;">
                <button type="submit" class="btn btn-primary">Save Score</button>
            </p>

            <datalist id="players">
                @foreach (var p in Model.Players)
                {
                    <option value="@p"></option>
                }
            </datalist>
        }
    </div>

    <div class="col-sm-6 well">
        <p>
            <small>There will be a lot more statistics here in the future, I just didn't have time yet &hearts; Hannes</small>
        </p>

        <label>Previous results:</label>

        <ul>
            @foreach (var s in Model.Scores)
            {
                <li>@s.TeamBlue <b>@s.Outcome</b> @s.TeamRed</li>
            }
        </ul>

        <p style="text-align: right">
            @Html.ActionLink("Delete wrong score", "Index", "Delete")
        </p>
    </div>
</div>